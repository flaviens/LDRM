	</nav>
	<!-- END NAV -->    
	<section class="hero is-fullheight">
		<div class="hero-body">
			<div class="container has-text-centered">
				<div class="columns is-8 is-variable ">
					<div class="column is-one-third has-text-left">
						<h1 class="title is-1">Report damage</h1>
						<p class="is-size-4">Reporting home damage provides very helpful data to helpers and organizations.</p>
						<div class="social-media">
							<a href="https://facebook.com" target="_blank" class="button is-light is-large"><i class="fa fa-facebook-square" aria-hidden="true"></i></a>
							<a href="https://instagram.com" target="_blank" class="button is-light is-large"><i class="fa fa-instagram" aria-hidden="true"></i></a>
							<a href="https://twitter.com" target="_blank" class="button is-light is-large"><i class="fa fa-twitter" aria-hidden="true"></i></a>
						</div>
					</div>
					<div class="column is-two-thirds has-text-left">
                        <form action="/report" method="post">
                            <div class="field">
                                <label class="label">Full name</label>
                                <div class="control">
                                    <input class="input is-medium" type="text" name="fullname" required="true">
                                </div>
                            </div>
                            <div class="field">
                                <label class="label">Address</label>
                                <div class="control">
                                    <input class="input is-medium" type="text" name="address" required="true">
                                </div>
                            </div>
                            <div class="field">
                                <label class="label">Comment</label>
                                <div class="control">
                                    <textarea class="textarea is-medium"></textarea>
                                </div>
                            </div>
							<div class="field">
								<div class="file">
								<label class="file-label">
									<input class="file-input" type="file" name="photo">
									<span class="file-cta">
									<span class="file-icon">
										<i class="fa fa-upload"></i>
									</span>
									<span class="file-label">
										Choose a picture...
									</span>
									</span>
								</label>
								</div>
							</div>
							<div class="field">
<div class="control has-text-centered">
	<label class="label"> Do you have electricity?</label>

  <label class="radio">
    <input type="radio" name="yes">
    Yes
  </label>
  <label class="radio">
    <input type="radio" name="no">
    No
  </label>
    <label class="radio">
    <input type="radio" name="na">
    I don't know
  </label>
</div>
<div class="control has-text-centered" style="margin-top:20px">
	<label class="label"> Do you have water?</label>

  <label class="radio">
    <input type="radio" name="wyes">
    Yes
  </label>
  <label class="radio">
    <input type="radio" name="wno">
    No
  </label>
    <label class="radio">
    <input type="radio" name="wna">
    I don't know
  </label>
</div>

							</div>
                            <div class="control">
                                <button type="submit" class="button is-link is-fullwidth has-text-weight-medium is-medium">Submit</button>
                            </div>
                        </form>
					</div>
				</div>
			</div>
		</div>
	</section>

</body>

